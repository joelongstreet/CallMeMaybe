.welcome
    text-align: center
    form
        text-align:left

.preferences
  .controls
    .btn
      margin: 0px 0px 10px 10px


.well
  text-align: center

#helper
  background: transparent url('/img/mike.png') no-repeat right bottom
  position: fixed
  bottom: -250px
  right: 0px
  width: 100%
  height: 250px
  #thoughts
    background: transparent url('/img/thoughtbubble-blue.png') no-repeat 0px 0px
    display: none
    position: absolute
    top: -110px
    right: 100px
    width: 165px
    height: 140px
    padding: 10px 10px 40px 10px
    span
      font-family : 'Clicker Script', sans-serif
      font-size: 20px
  #concerts
    display: none
#helper.carly
  background: transparent url('/img/carly.png') no-repeat right bottom
  #thoughts
    background: transparent url('/img/thoughtbubble.png') no-repeat 0px 0px
    ul
      font-family: 'Raleway', sans-serif
      list-style-type: none
      margin: 0px
      padding: 0px
  #concerts
    display: block
    position: absolute
    bottom: 0px
    left: 0px
    height: 30px
    width: 100%
    background-color: rgba(0,0,0, .5)
    span
      color: #fff
      position: absolute
      margin: 3px 0px 2px 0px
      height: 25px
      left: 140px
      width: 2000px
      display: block
      overflow: hidden
      ul
        list-style-type: none
        margin: 0px
        padding: 0px
        height: 25px
        overflow: hidden
    span.title
      font-size: 20px
      width: 140px
      left: 0px